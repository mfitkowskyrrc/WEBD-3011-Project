<p style="color: green"><%= notice %></p>

<div class="row justify-content-center">
  <div class="col-md-8">
    <%= render partial: "product", locals: { product: @product, action_name: 'show' } %>
  </div>
</div>

<% if current_customer&.admin? %>
  <div class="container mt-4">
    <div class="card mx-auto" style="max-width: 500px;">
      <div class="card-header">
        <h3 class="mb-0">Admin Controls</h3>
      </div>
      <div class="card-body">
        <div class="d-flex justify-content-start">
          <%= link_to "Edit this product", edit_product_path(@product), class: 'btn btn-outline-dark text-decoration-none m-2' %>
          <%= button_to "Destroy this product", @product, method: :delete, class: 'btn btn-outline-danger text-decoration-none m-2' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
