<% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="container mt-4">
  <div class="card mx-auto" style="max-width: 800px;">
    <div class="card-header">
      <h3 class="mb-0">Order Details</h3>
    </div>
    <div class="card-body">
      <%= render @order %>

      <div class="d-flex justify-content-between mt-4">
        <%= link_to "Back to orders", orders_path, class: "btn btn-outline-secondary btn-sm" %>
      </div>
    </div>
  </div>
</div>

<% if current_customer&.admin? %>
  <div class="container mt-4">
    <div class="card mx-auto" style="max-width: 500px;">
      <div class="card-header">
        <h3 class="mb-0">Admin Controls</h3>
      </div>
      <div class="card-body">
        <div class="d-flex justify-content-start">
          <%= link_to "Edit this order", edit_order_path(@order), class: "btn btn-outline-dark text-decoration-none m-2" %>
          <%= button_to "Destroy this order", @order, method: :delete, class: "btn btn-outline-danger text-decoration-none m-2", data: { confirm: "Are you sure you want to delete this order?" } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
