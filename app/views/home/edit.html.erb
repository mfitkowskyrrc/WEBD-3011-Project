<%= form_with model: @content, url: home_update_path(section: @content.section) do |form| %>
  <div class="form-group">
    <%= form.label :content, "#{@content.section.titleize} Content" %>
    <%= form.text_area :content, rows: 10, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Update Content", class: "btn btn-primary" %>
  </div>
<% end %>