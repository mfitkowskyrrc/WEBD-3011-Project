<h1>Your Cart</h1>

<% if @cart_items.present? %>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Remove</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.product.name %></td>
          <td><%= number_to_currency(cart_item.product.price) %></td>
          <td><%= cart_item.quantity %></td>
          <td><%= number_to_currency(cart_item.product.price * cart_item.quantity) %></td>
          <td>
            <%= link_to 'Remove', remove_product_cart_path(@cart, product_id: cart_item.product.id), method: :post, data: { confirm: 'Are you sure you want to remove this item from your cart?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="cart-total">
    <h3>Total: $<%= number_to_currency(@cart_items.sum { |item| item.product.price * item.quantity }) %></h3>
  </div>

  <%= link_to 'Proceed to Checkout', checkout_cart_path, class: 'btn btn-primary' %>
<% else %>
  <p>Your cart is empty. <%= link_to 'Browse products', products_path %></p>
<% end %>

<%= link_to 'Continue Shopping', products_path, class: 'btn btn-secondary' %>
