  </head>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <span class="navbar-brand mb-0 h1">Game Haven</span>
  <div class="navbar">
    <div class="navbar-nav">
      <a class="nav-item nav-link" href=<%= root_path %>>Home</a>
      <a class="nav-item nav-link" href="<%= products_path %>">Products</a>
      <a class="nav-item nav-link" href="<%= admin_root_path %>">Admin Dashboard</a>
    </div>
  </div>
</nav>

  <body>
    <%= yield %>
